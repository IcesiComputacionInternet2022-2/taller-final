<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- Refer to https://docs.liquibase.com/change-types/community/create-table.html -->

    <changeSet id="23d4e2bc-7210-47c3-9617-c56ab7c0750d" author="1KVueltasAlCampo" failOnError="true">

        <createTable tableName="order">
            <column name="order_id" type="UUID">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="total" type="number" />
            <column name="status" type="varchar(120)" />
            <column name="order_item_id" type="UUID" >
                <constraints primaryKey="true" nullable="false" references="order_item(order_item_id)" foreignKeyName="fk-order-item"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>